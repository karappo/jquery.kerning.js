!!!
%html{lang: "ja"}
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}
    %title jquery.kerning.js
    %link{href: "//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css", rel: "stylesheet"}
    =stylesheet_link_tag 'jumbotron-narrow'
    =stylesheet_link_tag 'index'

    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    %script{src: "//google-code-prettify.googlecode.com/svn/trunk/src/prettify.js"}
    %script{src: "//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"}
    =javascript_include_tag 'lib/jquery.kerning.js'
    :javascript
      $(function(){
        $.getJSON("./data/mplus-2m-regular.json" , function(data) {
          $('.mplus.kern').kerning({"data":data});
        });
        $.getJSON("./data/utsukushi-mincho.json" , function(data) {
          $('.utsukushi.kern').kerning({"data":data});
        });
        $('.feature.kern').kerning();
      });
  %body{onload: "prettyPrint()"}
